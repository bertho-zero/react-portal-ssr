{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": ["ES2015", "DOM"],
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}
